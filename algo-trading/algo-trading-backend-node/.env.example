# ============================================================
# ALGO TRADING BACKEND â€” ENVIRONMENT CONFIGURATION
# ============================================================

# Server
NODE_ENV=development
PORT=3001

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/algo_trading?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption key for API keys stored in DB (32 bytes hex)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Zerodha Kite Connect
KITE_API_KEY=
KITE_API_SECRET=
KITE_ACCESS_TOKEN=

# Trading
TRADING_MODE=paper
MAX_DAILY_LOSS=5000
MAX_TRADE_SIZE=50000
MAX_OPEN_POSITIONS=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
